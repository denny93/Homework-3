package unifmiinformatics;
import java.util.Scanner;
public class Robot {
    private static Scanner Sc;

    public static void main(String[] args) {
        int number;
        //Robot get decision
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the number from 0 to 2(0=Wall,1=Chair,2=Nothing):");
        number = scanner.nextInt();
        if (number == 0) {
            System.out.println("Go Sideway");
        } else if (number == 1) {
            System.out.println("Jump");
        } else if (number == 2) {
            System.out.println("Forward");
        } else 
        System.out.println("Enter valid number between 0 to 2");
    }

    public static boolean FindTheMouSe() {
        Scanner scan = new Scanner(System.in);
        System.out.println("Pixels per inch");
        int pixels = scan.nextInt();
        if (pixels % 2 == 0) {
            System.out.println("Mouse detected,ready to attack !");
            return true;
        } else
            System.out.println("No mouse,start again,ask for another direction!");
        return false;
    }

    public static boolean BatteryChecker() {
        Scanner scan = new Scanner(System.in);
        int battery = scan.nextInt();
        if (battery > 0) {
            System.out.println("Hit the mouse and continue");
            return true;
        } else
            if(battery == 0)
            System.out.println("No battery,going to charge ");
        return false;
    }

    public static boolean HitTheFurniture() {
        Scanner scanner = new Scanner(System.in);
        int number = scanner.nextInt((10 - 1) + 1) + 1;
        if (number == 5) {
             System.out.println("Hit will destroy the furniture,the attack is canceled");
            return true;
        } else {
             System.out.println("The mouse is dead,furniture is saved");
            return false;
        }
        public static boolean Movements() {
            Scanner scan = new Scanner (System.in);
            int BatteRy = scan.nextInt();
            int BatterycheCK = scan.nextInt();
            if (BatteRy == 4) {
                System.out.println("Robot is moving");
            }else
            if (!HitTheFurniture()) {
                System.out.println("Mouse is dead");
            } else {
                if (BatteRy == 0)
                System.out.println("No hitting,mouse is happy");
            }
        }

        public static void EnergyforBattles() {
           Scanner scan = new Scanner (System.in);
            int EnergyforBattles = scan.nextInt();
            if (EnergyforBattles == 0) {
                System.out.println("No more battles! Need to charge the battery!");
            }else
                if (EnergyforBattles == 4 );
                    System.out.println("Battery is charged!");
            } else
                if(EnergyforBattles < 0)
                    System.out.println("No electricity,go to another room to charge");
        }
        public static boolean ChargeTheBattery() {
            try (Scanner scan = new Scanner(System.in)) {
                int Number = scan.nextInt();
                int Battery = scan.nextInt();
                int BatteryCharging = scan.nextInt();
                int FirStNumber = scan.nextInt((1000 - 1) + 1) + 1;
                int SecoNdNumber = scan.nextInt((1000 - 1) + 1) + 1;

                if (FirStNumber > SecoNdNumber) {
                    System.out.println("Electricity is on.");
                    Battery = 4;
                    return true;
                } else if (FirStNumber < SecoNdNumber) {
                    System.out.println("Electricity is off");
                    BatteryCharging--;
                    return false;
                } else if (FirStNumber == SecoNdNumber) {
                    BatteryCharging--;
                    return false;
                }
                public static void FinishTheJoB() {
                    for (int i = 10; i > 0; i--) {
                        if (i % 2 == 0) {
                            System.out.println(" I am a Robottttt" + i);
                        } else
                            System.out.println(i);
                        int response = scan.nextInt();
                        return response == 1;
                    }
                }
            }
        }
    }
}

